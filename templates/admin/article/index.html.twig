{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="my-5">Gestion Articles</h1>
    <a href="{{ path('app_admin_article_edit') }}" class="btn btn-outline-primary my-5">
        Ecrire un article
    </a>

    <table class="table table-striped">
        <tr class="table-dark">
            <th>Id</th>
            <th>Titre</th>
            <th>Date pub.</th>
            <th>Cat√©gorie</th>
            <th>Auteur</th>
            <th>Contenu</th>
            <th width="250px">Edition</th>
        </tr>

        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.publicationDate|date('d/m/Y H:i') }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.content }}</td>
                <td><a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-outline-primary">Modifier</a>
                    <a href="{{ path('app_admin_article_delete', {'id': article.id}) }}" class="btn btn-outline-danger">Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}